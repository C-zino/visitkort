---
const { htmlheading="h2", size="medium", font="anton", stylingclasses="" } = Astro.props; 
const Htmlheading = htmlheading;

const sizeClasses = {
  "large": "text-8xl lg:text-[9rem] ",
  "medium": "text-xl md:text-2xl ",
  "small": "text-base md:text-xl ",
};

const fontClasses = {
"anton": "font-heading", 
"poppins": "font-main",
};

const StylingClasses = {
  "bold"  : "font-extrabold",
"uppercase": "uppercase tracking-wide",
"hollow": "HollowText uppercase tracking-wide font-extrabold whitespace-nowrap", 
"hollowSm": "HollowTextSm uppercase tracking-wide font-extrabold whitespace-nowrap",
};
---
<Htmlheading class:list={[
  sizeClasses[size], 
  fontClasses[font], 
  StylingClasses[stylingclasses]  
]}>
  <slot />
</Htmlheading>

<style>
.HollowText {
  color: #EAEAEE;             
  -webkit-text-stroke: 4px var(--color-secondary); 

}

.HollowTextSm {
  color: #EAEAEE;             
  -webkit-text-stroke: 1px var(--color-primary); 

}

</style>